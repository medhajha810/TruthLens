{
  "name": "truthlens",
  "version": "1.0.0",
  "description": "A Multi-Perspective News Analyzer with AI-powered insights",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "vercel-build": "cd client && npm run build"
  },
  "keywords": [
    "news",
    "analysis",
    "fact-checking",
    "ai",
    "bias-detection",
    "media-literacy"
  ],
  "author": "TruthLens Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^6.0.1",
    "compression": "^1.7.4",
    "node-cache": "^5.1.2",
    "axios": "^1.3.4",
    "socket.io": "^4.6.1",
    "dotenv": "^16.0.3",
    "express-rate-limit": "^6.7.0",
    "express-slow-down": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 